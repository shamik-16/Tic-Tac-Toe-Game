<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_Screen"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/graddient"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Player Names"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="50dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/x"
            android:layout_marginRight="10dp"

            />

        <EditText
            android:id="@+id/ed_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Player One"
            android:ems="10"
            android:textSize="25sp"
            android:inputType="textPersonName"
            android:background="#FFFFFF"
            android:textAlignment="center"
            android:textColor="#151414"
            android:textColorHint="#918C8C"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/o"
            android:layout_marginRight="10dp"

            />

        <EditText
            android:id="@+id/ed_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Player Two"
            android:ems="10"
            android:textSize="25sp"
            android:inputType="textPersonName"
            android:background="@color/white"
            android:textAlignment="center"
            android:textColor="#151414"
            android:textColorHint="#918C8C"
            />


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_startgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start game"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_drawable_2"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        />

</LinearLayout>